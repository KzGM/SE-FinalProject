@using ShopTestSE.Models;
@model List<Product>

@{
    <div class="product-grid">
        @foreach (var item in Model)
        {

        <!-- Product 1 -->

        <div class="product-item men">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src='@Url.Content("~/Template/images_sup/"+item.image)'/>
                </div>
                <div class="favorite favorite_left"></div>
                @*<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Hot</span></div>*@
                <div class="product_info">
                    <h6 class="product_name"><a href="single.html">@item.ProductName</a></h6>
                    <div class="product_price">@item.Price VND</div>
                </div>
            </div>

            <div class="red_button add_to_cart_button"><a href="@Url.Action("OrderNow", "ShoppingCart", new { id = item.ProductID }, null)">add to cart</a></div>
        </div>
        }
    </div>
}



